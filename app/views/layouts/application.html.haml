!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title
      Lab2023web | #{yield :title || "HoÅŸgeldiniz"}
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    = stylesheet_link_tag "application", "http://fonts.googleapis.com/css?family=PT+Sans", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield :head
  %body
    %header.navbar.navbar-fixed-top
      #mini-nav
        .container
          %ul.nav
            %li=link_to "Github", "#"
            %li=link_to "Facebook", "#"
            %li=link_to "Twitter", "#"
            %li=link_to "Blog", "#"
            %li=link_to "Concat", "#"
      %nav#main-nav.navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a#logo.brand{:href => root_url}
            = image_tag "logo.png"
          .nav-collapse
            %ul.nav.pull-right
              %li= link_to "Home", root_path
              %li= link_to "About", open_sources_path
              %li= link_to "Works", projects_url
              %li= link_to "Open Source", open_sources_path
              %li= link_to "Team", teams_path


    - if flash.count > 0
      .container
        .row-fluid
          - flash.each do |name, msg|
            %div{:class => "alert alert-#{name}"}
              %a.close{"data-dismiss" => "alert", :href => "#"} &times;
              = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
    .container
      = yield
      .clearfix
      %hr
      %ul
        %li= link_to "Open Source Projects", open_sources_path
        %li= link_to "Teams", teams_path
        %li= link_to "Projects", projects_url