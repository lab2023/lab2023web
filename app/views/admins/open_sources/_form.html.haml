= simple_form_for([:admins, @open_source], :defaults => {:input_html => {:class => 'span12'}}) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :repostory_url
    = f.input :description, :input_html => {:rows => 3}
    = f.input :twitter_username
    = f.input :facebook_page

  .form-actions
    = f.button :submit
