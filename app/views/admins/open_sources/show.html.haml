= title t('tt.show', resource_name: OpenSource.model_name.human)

- content_for :toolbar_left do
  = link_to(admins_open_sources_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left
  = link_to(edit_admins_open_source_path(@open_source) , class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
    %i.icon-pencil
  = link_to(admins_open_source_path(@open_source), class: 'btn', confirm: t('confirm'), method: :delete, rel: 'tooltip', title: t('tooltips.delete')) do
    %i.icon-trash

= show_for @open_source do |s|
  = s.attribute :name
  = s.attribute :repostory_url
  = s.attribute :twitter_username
  = s.attribute :facebook_page
