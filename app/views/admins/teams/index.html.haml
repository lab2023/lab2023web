= title t('tt.index', resource_name: Team.model_name.human)

- content_for :toolbar_left do
  = link_to(admins_dashboard_index_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left
  = link_to(new_admins_team_path, class: 'btn', rel: 'tooltip', title: t('tooltips.new')) do
    %i.icon-plus

%table.table.table-striped.table-bordered.table-condensed
  %tr
    %th
      = t('activerecord.attributes.team.name')
    %th
      = t('activerecord.attributes.team.mail')
    %th{:width => "140px"}
  - @teams.each do |team|
    %tr
      %td= team.name
      %td= team.mail
      %td
        = link_to(admins_team_path(team), class: 'btn', rel: 'tooltip', title: t('tooltips.show')) do
          %i.icon-eye-open
        = link_to(edit_admins_team_path(team) , class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
          %i.icon-pencil
        = link_to(admins_team_path(team), class: 'btn', confirm: t('confirm'), method: :delete, rel: 'tooltip', title: t('tooltips.delete')) do
          %i.icon-trash

%hr/
= will_paginate @teams