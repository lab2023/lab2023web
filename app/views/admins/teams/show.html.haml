= title t('tt.show', resource_name: Team.model_name.human)

- content_for :toolbar_left do
  = link_to(admins_teams_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left
  = link_to(edit_admins_team_path(@team) , class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
    %i.icon-pencil
  = link_to(admins_team_path(@team), class: 'btn', confirm: t('confirm'), method: :delete, rel: 'tooltip', title: t('tooltips.delete')) do
    %i.icon-trash

.thumbnail.pull-right
  = image_tag(@team.avatar.url(:small))
= show_for @team do |s|
  = s.attribute :name
  = s.attribute :description
  = s.attribute :email
  = s.attribute :github_username
  = s.attribute :vidipanda_username
  = s.attribute :dudupress_username
  = s.attribute :twitter_username
  = s.attribute :facebook_username

