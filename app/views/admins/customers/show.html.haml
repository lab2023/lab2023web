= title t('tt.show', resource_name: Customer.model_name.human)

- content_for :toolbar_left do
  = link_to(admins_customers_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left
  = link_to(edit_admins_customer_path(@customer) , class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
    %i.icon-pencil
  = link_to(admins_customer_path(@customer), class: 'btn', confirm: t('confirm'), method: :delete, rel: 'tooltip', title: t('tooltips.delete')) do
    %i.icon-trash

= show_for @customer do |s|
  = s.attribute :name
  = s.attribute :website
