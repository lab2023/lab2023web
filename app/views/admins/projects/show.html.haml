= title t('tt.show', resource_name: Project.model_name.human)

- content_for :toolbar_left do
  = link_to(admins_projects_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left
  = link_to(edit_admins_project_path(@project) , class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
    %i.icon-pencil
  = link_to(admins_project_path(@project), class: 'btn', confirm: t('confirm'), method: :delete, rel: 'tooltip', title: t('tooltips.delete')) do
    %i.icon-trash

= show_for @project do |s|
  = s.attribute :name
  = s.attribute :description
  = s.attribute :website
  = s.attribute :owner
  = s.attribute :twitter_username
  = s.attribute :facebook_page
