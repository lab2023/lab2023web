= title t('tt.index', resource_name: Project.model_name.human)

- content_for :toolbar_left do
  = link_to(admins_dashboard_index_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left
  = link_to(new_admins_project_path, class: 'btn', rel: 'tooltip', title: t('tooltips.new')) do
    %i.icon-plus

%table.table.table-striped.table-bordered.table-condensed
  %tr
    %th Resim
    %th Proje AdÄ±
    %th Website
    %th{:width => "140px"}
  - @projects.each do |project|
    %tr
      %td
        .thumbnail
          = image_tag project.picture.url(:small)
      %td= project.name
      %td= project.website
      %td
        = link_to(admins_project_path(project), class: 'btn', rel: 'tooltip', title: t('tooltips.show')) do
          %i.icon-eye-open
        = link_to(edit_admins_project_path(project) , class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
          %i.icon-pencil
        = link_to(admins_project_path(project), class: 'btn', confirm: t('confirm'), method: :delete, rel: 'tooltip', title: t('tooltips.delete')) do
          %i.icon-trash
%hr/
= will_paginate @projects