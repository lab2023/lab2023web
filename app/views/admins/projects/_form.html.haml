= simple_form_for([:admins, @project], :defaults => {:input_html => {:class => 'span12'}}) do |f|
  = f.error_notification
  .row-fluid
    .span6.well
      .form-inputs
        = f.input :name
        = f.input :description
    .span6.well
      .form-inputs
        = f.input :website
        = f.input :owner, :collection => %w(lab2023 Müşteri)
        = f.input :twitter_username
        = f.input :facebook_page
        = f.input :picture, :as => :file

  .form-actions
    .pull-right
      = f.button :submit
