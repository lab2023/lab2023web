= simple_form_for([:admins, @project], :html => {:multipart => true}, :defaults => {:input_html => {:class => 'span12'}}) do |f|
  = f.error_notification
  .row-fluid
    .span6.well
      .form-inputs
        = f.input :name
        = f.input :description
    .span6.well
      .form-inputs
        = f.input :website
        = f.input :owner, :collection => %w(lab2023 Müşteri)
        = f.input :twitter_username
        = f.input :facebook_page
        = file_field_tag('project_project_picture_image', multiple: true, name: "project[project_pictures_attributes][][image]")

  .form-actions
    .pull-right
      = f.button :submit
