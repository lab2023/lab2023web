= title t('tt.show', resource_name: Open_source.model_name.human)

- content_for :toolbar_left do
  = link_to(open_sources_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left

  = link_to(edit_open_source_path(@open_source), class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
    %i.icon-pencil

= show_for @open_source do |s|
  = s.attribute :name
  = s.attribute :repostory_url
  = s.attribute :twitter_username
  = s.attribute :facebook_page
