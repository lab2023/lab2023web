= title t('tt.show', resource_name: Project.model_name.human)

- content_for :toolbar_left do
  = link_to(projects_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left

  = link_to(edit_project_path(@project), class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
    %i.icon-pencil

= show_for @project do |s|
  = s.attribute :name
  = s.attribute :description
  = s.attribute :website
  = s.attribute :owner
  = s.attribute :twitter_username
  = s.attribute :facebook_page
