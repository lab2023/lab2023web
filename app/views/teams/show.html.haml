= title t('tt.show', resource_name: Team.model_name.human)

- content_for :toolbar_left do
  = link_to(teams_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left

  = link_to(edit_team_path(@team), class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
    %i.icon-pencil

= show_for @team do |s|
  = s.attribute :name
  = s.attribute :description
  = s.attribute :mail
  = s.attribute :github_username
  = s.attribute :twitter_username
  = s.attribute :facebook_username
